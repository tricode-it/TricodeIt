---
import ContactMain from "../components/ContactMain.astro";
import Navbar from "../components/NavBar.astro";
import Pagination from "../components/Pagination.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacto" description="¿Tienes un proyecto en mente o necesitas asesoramiento tecnológico? Ponte en contacto con nosotros. En TriCode, estamos aquí para ayudarte a llevar tus ideas al siguiente nivel. Rellena nuestro formulario o llámanos al +54 9 3865-415222.">
  <div class="container1 m-auto">
    <Navbar />
    <ContactMain />
    <Pagination />
  </div>
</Layout>

<style>
  .container1 {
    background-image: radial-gradient(
      rgba(12, 12, 12, 0.171) 2px,
      transparent 0
    );
    background-size: 30px 30px;
    background-position: -5px -5px;
  }
</style>
