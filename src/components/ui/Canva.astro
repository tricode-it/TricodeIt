<div
  id="shapeDivider"
  class="custom-shape-divider-bottom-1721786094 relative overflow-hidden rotate-180 transition-transform duration-300 ease-in-out"
>
  <svg
    data-name="Layer 1"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 1200 120"
    preserveAspectRatio="none"
    class="transition-width duration-300 ease-in-out"
  >
    <path
      d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
      class="shape-fill"></path>
  </svg>
</div>

<style>
  .custom-shape-divider-bottom-1721786094 svg {
    width: calc(245% + 1.3px);
    height: 194px;
    transform: scale(1);
  }

  .custom-shape-divider-bottom-1721786094 .shape-fill {
    fill: rgb(250 204 21);
  }

  /** For tablet devices **/
  @media (min-width: 768px) and (max-width: 1023px) {
    .custom-shape-divider-bottom-1721786094 svg {
      width: calc(169% + 1.3px);
      height: 149px;
    }
  }

  /** For mobile devices **/
  @media (max-width: 767px) {
    .custom-shape-divider-bottom-1721786094 svg {
      width: calc(221% + 1.3px);
      height: 152px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    let lastScrollTop = 0;

    window.addEventListener("scroll", function () {
      const shapeDivider = document.querySelector(
        "#shapeDivider svg"
      ) as HTMLElement;
      if (!shapeDivider) return;

      const currentScrollTop = window.scrollY;

      if (currentScrollTop > lastScrollTop) {
        // Desplazamiento hacia abajo
        shapeDivider.style.width = "calc(135% + 1.3px)";
        shapeDivider.style.transform = "scale(1.05)";
      } else {
        // Desplazamiento hacia arriba
        shapeDivider.style.width = "calc(245% + 1.3px)";
        shapeDivider.style.transform = "scale(1)";
      }

      lastScrollTop = currentScrollTop;
    });
  });
</script>
